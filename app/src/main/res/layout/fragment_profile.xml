<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants">

    <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/common_padding"
          android:clipToPadding="false">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_profile_photo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/dr_house"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="60dp"
            />
            <TextView
                android:id="@+id/fragment_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/debug_name"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black"
            />
            <TextView
                android:id="@+id/fragment_profile_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/debug"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
            />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp"
        >
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/profile_margin_left"
            >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/backgroundDark"
                    android:text="Группа крови:"
                    android:textSize="@dimen/profile_text_size"
                />
                <TextView
                    android:id="@+id/fragment_profile_blood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/debug"
                    android:layout_marginLeft="@dimen/profile_margin_left"
                    android:textSize="@dimen/profile_text_size"
                />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:paddingLeft="@dimen/profile_margin_left"
                    android:paddingRight="@dimen/profile_margin_left">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:textColor="@android:color/black"
                          android:text="Личный календарь"
                          android:textSize="@dimen/profile_text_size"
                          android:layout_marginTop="@dimen/profile_margin_top"
                          android:layout_marginBottom="@dimen/profile_margin_top"
                    />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
            >
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:focusable="true"
                        android:clickable="true"
                        android:paddingLeft="@dimen/profile_margin_left"
                        android:paddingRight="@dimen/profile_margin_left">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textStyle="bold"
                              android:textColor="@android:color/black"
                              android:text="Справочник донора"
                              android:textSize="@dimen/profile_text_size"
                              android:layout_marginTop="@dimen/profile_margin_top"
                              android:layout_marginBottom="@dimen/profile_margin_top"
                    />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:focusable="true"
                        android:clickable="true"
                        android:paddingLeft="@dimen/profile_margin_left"
                        android:paddingRight="@dimen/profile_margin_left">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textStyle="bold"
                              android:textColor="@android:color/black"
                              android:text="Бонусы"
                              android:textSize="@dimen/profile_text_size"
                              android:layout_marginTop="@dimen/profile_margin_top"
                              android:layout_marginBottom="@dimen/profile_margin_top"
                    />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:focusable="true"
                        android:clickable="true"
                        android:paddingLeft="@dimen/profile_margin_left"
                        android:paddingRight="@dimen/profile_margin_left">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textStyle="bold"
                              android:textColor="@android:color/black"
                              android:text="Благотоворительность"
                              android:textSize="@dimen/profile_text_size"
                              android:layout_marginTop="@dimen/profile_margin_top"
                              android:layout_marginBottom="@dimen/profile_margin_top"
                    />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                    <ImageView android:layout_width="74dp"
                               android:layout_height="74dp"
                               android:src="@drawable/vk"
                               android:layout_margin="5dp"/>
                    <ImageView android:layout_width="74dp"
                               android:layout_height="74dp"
                               android:src="@drawable/ok"
                               android:layout_margin="5dp"/>
                    <ImageView android:layout_width="74dp"
                               android:layout_height="74dp"
                               android:src="@drawable/fb"
                               android:layout_margin="5dp"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>